@model NeoSchool.Areas.Administration.Models.UserRoleViewModel

@{
    ViewData["Title"] = "ViewAllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

}

<div>
    <h4>All Users and their roles:</h4>
    <hr />
    <h4 class="mt-3">All Admins:</h4>
    <hr />
    <ul>
        @foreach (var user in Model.UsersAndRoles.Where(x => x.Value == "Admin"))
        {
            <li>@user.Key</li>
        }
    </ul>
    <h4 class="mt-3">All Moderators:</h4>
    <hr />
    <ul>

        @foreach (var user in Model.UsersAndRoles.Where(x => x.Value == "Moderator"))
        {
            <li>@user.Key</li>
        }
    </ul>

    <h4 class="mt-3">All Users:</h4>
    <hr />
    <ul>

        @foreach (var user in Model.UsersAndRoles.Where(x => x.Value == "User"))
        {
            <li>@user.Key</li>
        }
    </ul>
</div>

