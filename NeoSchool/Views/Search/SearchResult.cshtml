@model NeoSchool.Models.SearchModel

@{
    ViewData["Title"] = "SearchResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search results:</h2>
<hr class="mt-3" />

<h4>Video Lessons for the @Model.DisciplineName discipline and @Model.Grade grade:</h4>
<hr class="mt-3" />
<ul>
    @foreach (var item in Model.VideoIdsAndNames)
    {
    <li><a class="h5" href="/VideoLesson/VideoDetails/@item.Key">@item.Value</a></li>
        <br />
    }
</ul>
<h4 class="mt-5">Materials for the @Model.DisciplineName discipline and @Model.Grade grade:</h4>
<hr class="mt-3" />
<ul>
    @foreach (var item in Model.MaterialIdsAndNames)
    {
    <li><a class="h5" href="/Material/MaterialDetails/@item.Key">@item.Value</a> </li>
    }
</ul>