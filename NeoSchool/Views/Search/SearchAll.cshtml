@model NeoSchool.Models.SearchModel

<h1 style="text-align:center">Search for Videos and Materials</h1>

<div class="d-flex justify-content-between">
    <div class="col-3"></div>
    <div class="col-6">
        <div>
            <form asp-action="GetAllForTeachers" class="mt-4" style="text-align:center">
                <div class="form-group">
                    <input type="submit" value="Just show everything for teachers" class="btn btn-primary" />
                </div>
            </form>
            <div class="mt-4">
                <h3>Or you can search by creteria:</h3>
                <hr />
            </div>
            <form asp-action="SearchAll" class="mt-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DisciplineName" class="control-label">Discipline Name</label>
                    <input asp-for="DisciplineName" class="form-control" />
                    <span asp-validation-for="DisciplineName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                <div class="form-group" style="text-align:center">
                    <input type="submit" value="Search!" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
<div class="col-3"></div>
</div>


