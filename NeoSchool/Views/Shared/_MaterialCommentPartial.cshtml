@model NeoSchool.Models.MaterialCommentInputModel

<h4 class="mt-4">Let us know what you think!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CommentCurrentMaterial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Write your comment:</label>
                <textarea asp-for="Text" class="form-control w-100"> </textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="row">
                <input type="hidden" id="MaterialId" name="MaterialId" value="@ViewData["MaterialId"]">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

